<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/shoppingscreenbackground">

    <TextView
        android:id="@+id/shoppingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/logoutButton"
        android:layout_marginTop="55dp"
        android:gravity="center"
        android:text="Hello, Welcome to Smart Shopping.. We are currently under Progress, we will be back soon
         with something very interesting !!"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="19sp"
        android:textStyle="italic|bold" />

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="60dp"
        android:text="LogOut"
        android:onClick="logout"/>

</RelativeLayout>